<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Produto</title>

    <!-- Importando Materialize CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h1 class="center-align">Editar Produto</h1>

        <!-- Formulário estilizado com Materialize -->
        <form action="/products/edit/<%= product.id %>" method="POST" class="col s12">
            <input type="hidden" name="id" value="<%= product.id %>">

            <div class="row">
                <div class="input-field col s12">
                    <input id="name" type="text" name="name" value="<%= product.name %>" required>
                    <label for="name" class="active">Nome</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <input id="price" type="number" name="price" value="<%= product.price %>" step="0.01" required>
                    <label for="price" class="active">Preço</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <input id="quantity" type="number" name="quantity" value="<%= product.quantity %>" required>
                    <label for="quantity" class="active">Quantidade</label>
                </div>
            </div>

            <!-- Botão de envio estilizado -->
            <div class="row center-align">
                <button class="btn waves-effect waves-light" type="submit">Salvar Alterações
                    <i class="material-icons right">save</i>
                </button>
            </div>
        </form>
    </div>

    <!-- Importando Materialize JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- Inicializando o Materialize para labels flutuantes -->
    <script>
        M.AutoInit();
    </script>
</body>
</html>
